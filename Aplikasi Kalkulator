print("Kalkulator Sederhana")
angka1 = float(input("Masukkan angka pertama: "))
angka2 = float(input("Masukkan angka kedua: "))
operasi = input("Masukkan operasi (+, -, *, /): ")
if operasi == '+':
    hasil = angka1 + angka2
    print("Hasil: ", hasil)
elif operasi == '-':
    hasil = angka1 - angka2
    print("Hasil: ", hasil)
elif operasi == '*':
    hasil = angka1 * angka2
    print("Hasil: ", hasil)
elif operasi == '/':
    hasil = angka1 / angka2
    print("Hasil: ", hasil)
else:
    print("Operasi yang dimasukkan tidak valid")
